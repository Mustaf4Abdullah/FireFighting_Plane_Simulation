@{
    ViewData["Title"] = "Upload File";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        /* Background styling */
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background-image: url('https://us.123rf.com/450wm/kucingliarz/kucingliarz2310/kucingliarz231012603/215754522-firefighters-fighting-the-fire-in-the-forest-vector-illustration-in-flat-style.jpg?ver=6');
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
            color: white;
        }

        /* Centering content */
        .container {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            backdrop-filter: blur(5px);
            padding: 20px;
        }

        /* Heading styles */
        h2 {
            margin-bottom: 20px;
            font-size: 2em;
            font-weight: bold;
            text-align: center;
        }

        /* Form styling */
        form {
            padding: 40px;
            border-radius: 10px;
            max-width: 400px;
            width: 100%;
            backdrop-filter: blur(5px);
            background-color: rgba(0.6, 0.6, 0.6, 0.6); /* Semi-transparent background for contrast */
        }

        label {
            font-size: 2em;
            font-weight: bold;
            margin-bottom: 10px;
            display: block;
        }

        input[type="file"] {
            width: 100%;
            padding: 8px;
            margin-bottom: 15px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        button {
            display: block;
            width: 100%;
            padding: 10px;
            background-color: #ff5722; /* Button color */
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 1em;
            cursor: pointer;
            transition: background 0.3s ease;
        }

            button:hover {
                background-color: #e64a19;
            }

        /* Message styling */
        .message {
            margin-top: 20px;
            padding: 10px;
            background: rgba(0, 255, 0, 0.2);
            border: 1px solid green;
            border-radius: 5px;
            text-align: center;
            font-size: 1em;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Upload Distance Matrix</h2>
        <form asp-action="UploadFile" method="post" enctype="multipart/form-data">
            <label for="file">Select File:</label>
            <input type="file" name="file" id="file" />
            <button type="submit">Upload</button>
        </form>

        @if (ViewData["Message"] != null)
        {
            <div class="message">@ViewData["Message"]</div>
        }
    </div>
</body>
</html>
